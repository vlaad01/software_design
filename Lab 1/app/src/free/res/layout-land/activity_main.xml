<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5pt">

            <TextView
                android:id="@+id/textInput"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:autoSizeMaxTextSize="36sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:text="123456"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buttonCopyInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="C" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5pt">

            <TextView
                android:id="@+id/textOutput"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:autoSizeMaxTextSize="36sp"
                android:autoSizeMinTextSize="20sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="sans-serif-light"
                android:maxWidth="120dp"
                android:maxLines="1"
                android:text="123456"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buttonCopyOutput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="C" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="244dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/spCategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Spinner
                android:id="@+id/spInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="@color/white" />

            <Spinner
                android:id="@+id/spOutput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            app:columnCount="4">

            <Button
                android:id="@+id/button7"
                style="@style/GridButton"
                android:text="7"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/button8"
                style="@style/GridButton"
                android:text="8"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/button9"
                style="@style/GridButton"
                android:text="9"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <ImageButton
                android:id="@+id/buttonBackspace"
                style="@style/GridButton"
                android:src="@drawable/ic_outline_backspace_24"
                app:backgroundTint="#f98a10"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/button4"
                style="@style/GridButton"
                android:text="4"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/button5"
                style="@style/GridButton"
                android:text="5"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/button6"
                style="@style/GridButton"
                android:text="6"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/buttonClear"
                style="@style/GridButton"
                android:text="C"
                app:backgroundTint="#f98a10"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/button1"
                style="@style/GridButton"
                android:text="1"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/button2"
                style="@style/GridButton"
                android:text="2"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/button3"
                style="@style/GridButton"
                android:text="3"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <ImageButton
                android:id="@+id/buttonSwap"
                style="@style/GridButton"
                android:src="@drawable/ic_outline_swap_vert_24"
                app:backgroundTint="#f98a10"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/button0"
                style="@style/GridButton"
                android:text="0"
                app:layout_columnSpan="2"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <Button
                android:id="@+id/buttonDot"
                style="@style/GridButton"
                android:text="."
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

            <ImageButton
                android:id="@+id/buttonChangeOrient"
                style="@style/GridButton"
                android:src="@drawable/ic_outline_screen_rotation_24"
                app:backgroundTint="#f98a10"
                app:layout_columnWeight="1"
                app:layout_rowWeight="1" />

        </androidx.gridlayout.widget.GridLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>