<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/waitRoomFragment">

    <fragment
        android:id="@+id/waitRoomFragment"
        android:name="com.example.battleshipgame.Fragments.WaitRoomFragment"
        android:label="fragment_wait_room"
        tools:layout="@layout/fragment_wait_room" >
        <action
            android:id="@+id/to_game_fragment"
            app:destination="@id/gameFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.battleshipgame.Fragments.GameFragment"
        android:label="fragment_game"
        tools:layout="@layout/fragment_game" >
        <action
            android:id="@+id/action_gameFragment_to_waitRoomFragment"
            app:destination="@id/waitRoomFragment" />
    </fragment>
</navigation>